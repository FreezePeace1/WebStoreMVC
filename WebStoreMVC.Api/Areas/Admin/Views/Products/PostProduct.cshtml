@model Product

<body>

<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Добавление товара</h2>
                    </div>
                </div>
                <form asp-area="Admin" asp-controller="Products" asp-action="PostProduct" method="post" class="tm-edit-product-form">
                    <div class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">

                            <div class="form-group mb-3">
                                <label
                                    for="name">
                                    Название товара
                                </label>
                                <input asp-for="ProductName"
                                       id="name"
                                       name="name"
                                       type="text"
                                       value="Мобильный телефон"
                                       class="form-control validate"
                                       required/>
                            </div>
                            <div class="form-group mb-3">
                                <label
                                    for="description">
                                    Описание
                                </label
                                >
                                <textarea asp-for="Description"
                              class="form-control validate"
                              rows="3"
                              required
                            ></textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label
                                    for="category">
                                    Категория
                                </label
                                >
                                <select
                                    class="custom-select tm-select-accounts"
                                    id="category">
                                    <option selected>ИЗМЕНЕНИЕ КАТЕГОРИИ НЕДОСТУПНО</option>
                                    <option value="1">Смартфоны</option>
                                    <option value="2">Гарнитура</option>
                                    <option value="3">Ноутбуки</option>
                                </select>
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label
                                        for="expire_date">
                                        Количество
                                    </label>
                                    <input asp-for="Quantity"
                                           type="text"
                                           class="form-control validate"
                                           data-large-mode="true"/>
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label
                                        for="stock">
                                        Цена
                                    </label>
                                    <input asp-for="Price"
                                           type="text"
                                           class="form-control validate"
                                           required/>
                                </div>
                            </div>

                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                            <div class="tm-product-img-dummy mx-auto">
                                <i
                                    class="fas fa-cloud-upload-alt tm-upload-icon"
                                    onclick="document.getElementById('fileInput').click();">
                                </i>
                            </div>
                            <div class="custom-file mt-3 mb-3">
                                <input id="fileInput" type="file" style="display:none;"/>
                                <input
                                    type="button"
                                    class="btn btn-primary btn-block mx-auto"
                                    value="UPLOAD PRODUCT IMAGE"
                                    onclick="document.getElementById('fileInput').click();"/>
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                                <br>
                                <label>
                                    Название картинки
                                </label>
                                <input asp-for="Images" type="text" value=".png"
                                       class="form-control validate"/>
                                <br/>
                            </div>
                            <br/>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                                <label
                                    for="stock">
                                    Остальная информация
                                </label>
                                <br>
                                <label>
                                    Article
                                </label>
                                <input asp-for="Article" type="text"
                                       class="form-control validate"/>
                                <br>
                                <label>
                                    Хештеги
                                </label>
                                <input asp-for="Hashtags" type="text" value="#Производитель,#цвет,#ЦеноваяКатегория"
                                       class="form-control validate"/>
                                <br>
                                <label>
                                    Цвет
                                </label>
                                <input asp-for="Colour" type="text"
                                       class="form-control validate"/>
                                <br>
                                <label>
                                    Производитель
                                </label>
                                <input asp-for="Manufacturer" type="text"
                                       class="form-control validate"/>

                            </div>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


<script src="js/jquery-3.3.1.min.js"></script>
<!-- https://jquery.com/download/ -->
<script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
<!-- https://jqueryui.com/download/ -->
<script src="js/bootstrap.min.js"></script>
<!-- https://getbootstrap.com/ -->
<script>
      $(function() {
        $("#expire_date").datepicker();
      });
    </script>
</body>