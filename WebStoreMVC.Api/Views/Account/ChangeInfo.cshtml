@model  WebStoreMVC.Dtos.CustomerInfoDto

<div class="section">
    <div class="container">
        <div class="row">
            <form asp-controller="Account" asp-action="ChangeInfo">
                <div class="col-md-7">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="billing-details">
                        <div class="form-group">
                            <input asp-for="LastName" class="input" type="text" placeholder="Фамилия">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="FirstName" class="input" type="text" placeholder="Имя">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Patronymic" class="input" type="text" placeholder="Отчество (необязательно)">
                            <span  asp-validation-for="Patronymic" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="City" class="input" type="text" placeholder="Город">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Address" class="input" type="text" placeholder="Адрес">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="input" type="tel" placeholder="Номер телефона">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Сохранить</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>