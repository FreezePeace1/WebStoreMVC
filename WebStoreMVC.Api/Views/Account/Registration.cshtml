@model WebStoreMVC.Dtos.RegisterDto

@{
    ViewBag.Title = "Регистрация пользователя";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="col-sm-4">
            <div class="signup-form">
                <!--sign up form-->
                <h2>New User Signup!</h2>
                <form asp-controller="Account" asp-action="Registration" method="post" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div>
                        <input asp-for="Username" placeholder="Логин пользователя"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div>
                        <input asp-for="Email" placeholder="Почта(необязательно)"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div>
                        <input asp-for="Password" placeholder="Введите пароль"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <input type="password" id="Password" placeholder="Повторите пароль"/>
                    <button type="submit" class="btn btn-default">Register</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section><!--/form-->