@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebStoreMVC.Dtos.RegisterDto

@{
    ViewBag.Title = "Регистрация пользователя";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <form id="Registration" asp-controller="Auth" asp-action="Registration" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div style="margin-bottom: 10px;">
                        <input asp-for="Username" placeholder="Логин пользователя"/>
                    </div>
                    <div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;">
                        <input asp-for="Email" placeholder="Почта (обязательно)"/>
                    </div>
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;">
                        <input asp-for="Password" placeholder="Введите пароль"/>
                    </div>
                    <div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;">
                        <input asp-for="ConfirmedPassword" placeholder="Повторите пароль"/>
                    </div>

                    <div style="margin-bottom: 10px;">
                        <button type="submit" class="btn btn-default">Регистрация</button>
                    </div>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section><!--/form-->