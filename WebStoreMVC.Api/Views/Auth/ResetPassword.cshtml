@model WebStoreMVC.Dtos.ResetPasswordDto

@{
    ViewBag.Title = "Сброс пароля пользователя";
}

<div class="container">
    <div class="col-sm-4 col-sm-offset-1">
        <div>
            <form  asp-controller="Auth" asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="margin-bottom: 10px;">
                    <input asp-for="TokenForPasswordReseting" placeholder="Введите токен для восстановления пароля"/>
                </div>
                <div>
                    <span asp-validation-for="TokenForPasswordReseting" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 10px;">
                    <input asp-for="Password" placeholder="Введите новый пароль"/>
                </div>
                <div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 10px;">
                    <input asp-for="ConfirmPassword" placeholder="Повторите ввод пароля"/>
                </div>
                <div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 10px;">
                    <button type="submit" class="btn btn-default">Подтвердить</button>
                </div>
            </form>
        </div>
    </div>
</div>