@model WebStoreMVC.Dtos.LoginDto

@{
    ViewBag.Title = "Логин";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">

                    <form asp-controller="Auth" asp-action="Login" method="post" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div style="margin-bottom: 10px;">
                            <input asp-for="Username" placeholder="Логин пользователя" id="submitLogin"/>
                        </div>

                        <div style="margin-bottom: 10px;">
                            <input asp-for="Password" placeholder="Введите пароль" id="password"/>
                        </div>

                        <div style="margin-bottom: 10px;">
                            <button type="submit" class="btn btn-default">Вход</button>
                        </div>

                        <div style="margin-bottom: 10px;">
                            <a asp-controller="Auth" asp-action="ForgotPassword">Забыли пароль?</a>
                        </div>

                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->